<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_m"
    android:paddingBottom="@dimen/margin_s"
    android:paddingTop="@dimen/margin_s"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/o_p_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_weight="15"
        android:text="------------"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorPrimaryDark" />

   
    <TextView
        android:id="@+id/o_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="--"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginLeft="@dimen/margin_m"
        android:layout_marginRight="@dimen/margin_m"
        android:textColor="@color/gray_line" />

   

    <TextView
        android:id="@+id/o_p_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_l"
        android:text="$--.--"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/gray_line" />

  


</LinearLayout>